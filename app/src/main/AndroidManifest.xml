<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lyb.besttimer.androidshare">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ScrollViewControlActivity" />
        <activity android:name=".activity.SwipeRefreshLayoutActivity" />
        <activity android:name=".activity.RecyclerViewActivity" />
        <activity android:name=".activity.HeaderRecyclerViewActivity" />
        <activity android:name=".activity.ItemTreeActivity" />
        <activity android:name=".activity.ItemTouchActivity" />
        <activity android:name=".activity.PullRefreshActivity" />
        <activity android:name=".activity.TextViewActivity" />
        <activity android:name=".activity.DecorationActivity" />
        <activity android:name=".activity.SwipeLayoutActivity"></activity>
    </application>

</manifest>
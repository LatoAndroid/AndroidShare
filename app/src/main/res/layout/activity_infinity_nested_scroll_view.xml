<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.lyb.besttimer.androidshare.activity.pluginwidget.InfinityNestedScrollViewActivity">

    <com.lyb.besttimer.pluginwidget.view.nestedscrollview.InfinityNestedScrollView
        android:id="@+id/infinitySV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        app:infinityScrollView_speed="10" />

    <com.lyb.besttimer.pluginwidget.view.nestedscrollview.InfinityHorizontalScrollView
        android:id="@+id/infinityHSV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:infinityHScrollView_timeUnit="30"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        app:infinityHScrollView_speed="1" />
</LinearLayout>
